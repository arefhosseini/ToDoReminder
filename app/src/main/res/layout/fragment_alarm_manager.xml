<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.fearefull.todoreminder.ui.alarm_manager.AlarmManagerViewModel" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="RtlHardcoded">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.github.florent37.shapeofview.shapes.ArcView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="4dp"
                app:shape_arc_height="24dp"
                app:shape_arc_position="bottom">

                <com.google.android.material.appbar.AppBarLayout
                    android:id="@+id/appBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:theme="@style/AppTheme.AppBarOverlay">

                    <androidx.appcompat.widget.Toolbar
                        android:id="@+id/toolbar"
                        android:layout_width="match_parent"
                        android:layout_height="74dp"
                        app:popupTheme="@style/AppTheme.PopupOverlay"
                        android:contentInsetLeft="0dp"
                        android:contentInsetStart="0dp"
                        app:contentInsetLeft="0dp"
                        app:contentInsetStart="0dp"
                        android:contentInsetRight="0dp"
                        android:contentInsetEnd="0dp"
                        app:contentInsetRight="0dp"
                        app:contentInsetEnd="0dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top">

                            <TextView
                                style="@style/Toolbar.TitleText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:text="@string/add_reminder" />

                            <ImageButton
                                android:id="@+id/backImageButton"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:padding="12dp"
                                android:onClick="@{() -> viewModel.onNavigationBackClick()}"
                                android:background="?actionBarItemBackground"
                                android:src="@drawable/ic_arrow_forward_black_24dp"
                                android:tint="@color/whiteColor"/>

                            <ImageButton
                                android:id="@+id/confirmImageButton"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:layout_alignParentLeft="true"
                                android:layout_centerVertical="true"
                                android:padding="12dp"
                                android:onClick="@{() -> viewModel.onSaveClick()}"
                                android:background="?actionBarItemBackground"
                                android:src="@drawable/ic_check_black_24dp"
                                android:tint="@color/whiteColor"/>
                        </RelativeLayout>

                    </androidx.appcompat.widget.Toolbar>
                </com.google.android.material.appbar.AppBarLayout>
            </com.github.florent37.shapeofview.shapes.ArcView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/backgroundColorLightTheme"
                android:layout_marginTop="-24dp"
                android:orientation="vertical">

                <com.github.florent37.expansionpanel.viewgroup.ExpansionsViewGroupLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:expansion_openOnlyOne="true"
                    android:orientation="vertical">

                    <include layout="@layout/curved_line_bg_color" />

                    <FrameLayout
                        android:id="@+id/titleLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.github.florent37.expansionpanel.ExpansionHeader
                            android:layout_height="80dp"
                            android:layout_width="match_parent"
                            android:id="@+id/titleHeader"
                            app:expansion_headerIndicator="@id/titleHeaderIndicator"
                            app:expansion_layout="@id/titleExpansionLayout"
                            android:translationZ="8dp"
                            app:expansion_toggleOnClick="true">

                            <com.github.florent37.shapeofview.shapes.ArcView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:elevation="4dp"
                                app:shape_arc_height="-24dp"
                                app:shape_arc_position="top">

                                <com.github.florent37.shapeofview.shapes.ArcView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    app:shape_arc_height="24dp"
                                    app:shape_arc_position="bottom">

                                    <View
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:background="@color/primaryColorGradient1"/>

                                    <RelativeLayout
                                        android:layout_gravity="center"
                                        android:paddingLeft="@dimen/default_layout_padding"
                                        android:paddingRight="@dimen/default_layout_padding"
                                        android:paddingBottom="@dimen/default_half_layout_padding"
                                        android:layout_height="wrap_content"
                                        android:layout_width="match_parent">

                                        <ImageView
                                            android:id="@+id/titleHeaderIcon"
                                            android:layout_width="24dp"
                                            android:layout_height="24dp"
                                            android:layout_alignParentRight="true"
                                            android:layout_centerVertical="true"
                                            android:src="@drawable/ic_note_black_24dp"
                                            android:tint="@color/primaryTextColorDarkTheme"/>

                                        <TextView
                                            style="@style/TextStyle.Title"
                                            android:id="@+id/titleHeaderText"
                                            android:layout_height="wrap_content"
                                            android:layout_width="wrap_content"
                                            android:layout_toLeftOf="@id/titleHeaderIcon"
                                            android:layout_centerVertical="true"
                                            android:layout_marginRight="8dp"
                                            android:textColor="@color/primaryTextColorDarkTheme"
                                            android:text="@string/title" />

                                        <TextView
                                            style="@style/TextStyle.Title.Sub"
                                            android:id="@+id/titleHeaderDetail"
                                            android:layout_height="wrap_content"
                                            android:layout_centerHorizontal="true"
                                            android:layout_alignParentBottom="true"
                                            android:layout_marginRight="24dp"
                                            android:layout_width="wrap_content"
                                            android:gravity="center"
                                            android:text="@{viewModel.titleString}"
                                            android:textColor="@color/secondaryTextColorDarkTheme" />

                                        <androidx.appcompat.widget.AppCompatImageView
                                            android:adjustViewBounds="true"
                                            android:id="@+id/titleHeaderIndicator"
                                            android:layout_alignParentLeft="true"
                                            android:layout_centerVertical="true"
                                            android:layout_height="wrap_content"
                                            android:layout_width="wrap_content"
                                            android:tint="@color/primaryTextColorDarkTheme"
                                            app:srcCompat="@drawable/ic_expansion_header_indicator_grey_24dp" />

                                    </RelativeLayout>
                                </com.github.florent37.shapeofview.shapes.ArcView>

                            </com.github.florent37.shapeofview.shapes.ArcView>

                            <include layout="@layout/curved_line_bg_color" />
                        </com.github.florent37.expansionpanel.ExpansionHeader>

                        <com.github.florent37.expansionpanel.ExpansionLayout
                            android:id="@+id/titleExpansionLayout"
                            android:layout_height="match_parent"
                            android:layout_width="match_parent"
                            android:layout_marginTop="24dp"
                            android:background="@color/primaryLightColorLightTheme">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                android:paddingTop="80dp"
                                android:paddingBottom="16dp"
                                android:paddingLeft="16dp"
                                android:paddingRight="16dp">

                                <androidx.appcompat.widget.AppCompatEditText
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:inputType="textMultiLine"
                                    android:maxLines="3"
                                    android:background="@null"
                                    android:onTextChanged="@{(s, start, count, after) -> viewModel.onTitleTextChange(s)}"
                                    android:textDirection="rtl"
                                    android:paddingBottom="24dp"
                                    android:hint="@string/title_hint"/>

                            </LinearLayout>

                        </com.github.florent37.expansionpanel.ExpansionLayout>
                    </FrameLayout>

                    <include layout="@layout/curved_line_bg_color" />

                    <FrameLayout
                        android:id="@+id/repeatLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-24dp">

                        <com.github.florent37.expansionpanel.ExpansionHeader
                            android:layout_height="80dp"
                            android:layout_width="match_parent"
                            android:id="@+id/repeatHeader"
                            app:expansion_headerIndicator="@id/repeatHeaderIndicator"
                            app:expansion_layout="@id/repeatExpansionLayout"
                            android:translationZ="8dp"
                            app:expansion_toggleOnClick="true">

                            <com.github.florent37.shapeofview.shapes.ArcView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:elevation="4dp"
                                app:shape_arc_height="-24dp"
                                app:shape_arc_position="top">

                                <com.github.florent37.shapeofview.shapes.ArcView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    app:shape_arc_height="24dp"
                                    app:shape_arc_position="bottom">

                                    <View
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:background="@color/primaryColorGradient2"/>

                                    <RelativeLayout
                                        android:layout_gravity="center"
                                        android:paddingLeft="@dimen/default_layout_padding"
                                        android:paddingRight="@dimen/default_layout_padding"
                                        android:paddingBottom="@dimen/default_half_layout_padding"
                                        android:layout_height="wrap_content"
                                        android:layout_width="match_parent">

                                        <ImageView
                                            android:id="@+id/repeatHeaderIcon"
                                            android:layout_width="24dp"
                                            android:layout_height="24dp"
                                            android:layout_alignParentRight="true"
                                            android:layout_centerVertical="true"
                                            android:src="@drawable/ic_autorenew_black_24dp"
                                            android:tint="@color/primaryTextColorDarkTheme"/>

                                        <TextView
                                            style="@style/TextStyle.Title"
                                            android:id="@+id/repeatHeaderText"
                                            android:layout_height="wrap_content"
                                            android:layout_width="wrap_content"
                                            android:layout_toLeftOf="@id/repeatHeaderIcon"
                                            android:layout_centerVertical="true"
                                            android:layout_marginRight="8dp"
                                            android:textColor="@color/primaryTextColorDarkTheme"
                                            android:text="@string/repeat" />

                                        <androidx.appcompat.widget.AppCompatImageView
                                            android:adjustViewBounds="true"
                                            android:id="@+id/repeatHeaderIndicator"
                                            android:layout_alignParentLeft="true"
                                            android:layout_centerVertical="true"
                                            android:layout_height="wrap_content"
                                            android:layout_width="wrap_content"
                                            android:tint="@color/primaryTextColorDarkTheme"
                                            app:srcCompat="@drawable/ic_expansion_header_indicator_grey_24dp" />

                                    </RelativeLayout>
                                </com.github.florent37.shapeofview.shapes.ArcView>

                            </com.github.florent37.shapeofview.shapes.ArcView>
                            <include layout="@layout/curved_line_bg_color" />

                        </com.github.florent37.expansionpanel.ExpansionHeader>

                        <com.github.florent37.expansionpanel.ExpansionLayout
                            android:id="@+id/repeatExpansionLayout"
                            android:layout_height="match_parent"
                            android:layout_width="match_parent"
                            android:layout_marginTop="24dp"
                            app:expansion_expanded="true"
                            android:background="@color/primaryLightColorLightTheme">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:paddingTop="66dp">

                                <androidx.recyclerview.widget.RecyclerView
                                    android:id="@+id/repeatRecyclerView"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layoutDirection="rtl"
                                    android:paddingBottom="8dp"
                                    app:adapter="@{viewModel.getRepeatItemsLiveData}"
                                    tools:listitem="@layout/item_repeat" />

                                <com.github.florent37.shapeofview.shapes.ArcView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:elevation="4dp"
                                    app:shape_arc_height="-24dp"
                                    app:shape_arc_position="top">

                                    <com.github.florent37.shapeofview.shapes.ArcView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        app:shape_arc_height="24dp"
                                        app:shape_arc_position="bottom">

                                        <View
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:background="@color/primaryLightColorGradient1"/>

                                        <FrameLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content">

                                            <FrameLayout
                                                android:layout_width="50dp"
                                                android:layout_height="50dp"
                                                android:layout_gravity="left|top"
                                                android:clickable="true"
                                                android:focusable="true"
                                                android:onClick="@{() -> viewModel.onRepeatManagerClick()}"
                                                android:translationZ="12dp"
                                                android:background="@drawable/quarter_top_left_circle_primary_bg">

                                                <ImageView
                                                    android:id="@+id/repeatManagerIcon"
                                                    android:layout_width="28dp"
                                                    android:layout_height="28dp"
                                                    android:scaleType="fitCenter"
                                                    android:translationZ="18dp"
                                                    android:layout_gravity="center"
                                                    android:layout_marginRight="6dp"
                                                    android:src="@drawable/unselected_bell" />

                                                <TextView
                                                    android:layout_width="12dp"
                                                    android:layout_height="12dp"
                                                    android:translationZ="36dp"
                                                    android:gravity="center"
                                                    style="@style/TextStyle.Title.Mini"
                                                    android:layout_marginRight="6dp"
                                                    android:layout_marginLeft="6dp"
                                                    android:layout_marginTop="6dp"
                                                    android:textAlignment="center"
                                                    android:textColor="@color/primaryColorLightTheme"
                                                    android:background="@drawable/circle_white_bg"
                                                    android:layout_gravity="center_horizontal"
                                                    android:text="@{viewModel.repeatCounter}" />
                                            </FrameLayout>

                                            <com.fearefull.todoreminder.ui.base.BaseViewPager
                                                android:id="@+id/view_pager"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                app:pageLimit="@{viewModel.pageLimitPager}"
                                                app:currentTab="@{viewModel.currentTabPager}" />
                                        </FrameLayout>
                                    </com.github.florent37.shapeofview.shapes.ArcView>
                                </com.github.florent37.shapeofview.shapes.ArcView>

                            </LinearLayout>
                        </com.github.florent37.expansionpanel.ExpansionLayout>
                    </FrameLayout>

                    <include layout="@layout/curved_line_bg_color" />

                    <FrameLayout
                        android:id="@+id/ringtoneLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-24dp">

                        <FrameLayout
                            android:layout_height="80dp"
                            android:layout_width="match_parent"
                            android:id="@+id/ringtoneHeader"
                            android:focusable="true"
                            android:clickable="true"
                            android:onClick="@{() -> viewModel.onRingtoneClick()}"
                            android:translationZ="8dp">

                            <com.github.florent37.shapeofview.shapes.ArcView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:elevation="4dp"
                                app:shape_arc_height="-24dp"
                                app:shape_arc_position="top">

                                <com.github.florent37.shapeofview.shapes.ArcView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    app:shape_arc_height="24dp"
                                    app:shape_arc_position="bottom">

                                    <View
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:background="@color/primaryColorGradient3"/>

                                    <RelativeLayout
                                        android:layout_gravity="center"
                                        android:paddingLeft="@dimen/default_layout_padding"
                                        android:paddingRight="@dimen/default_layout_padding"
                                        android:paddingBottom="@dimen/default_half_layout_padding"
                                        android:layout_height="wrap_content"
                                        android:layout_width="match_parent">

                                        <ImageView
                                            android:id="@+id/ringtoneHeaderIcon"
                                            android:layout_width="24dp"
                                            android:layout_height="24dp"
                                            android:layout_alignParentRight="true"
                                            android:layout_centerVertical="true"
                                            android:src="@drawable/ic_music_note_black_24dp"
                                            android:tint="@color/primaryTextColorDarkTheme"/>

                                        <TextView
                                            style="@style/TextStyle.Title"
                                            android:id="@+id/ringtoneHeaderText"
                                            android:layout_height="wrap_content"
                                            android:layout_width="wrap_content"
                                            android:layout_toLeftOf="@id/ringtoneHeaderIcon"
                                            android:layout_centerVertical="true"
                                            android:layout_marginRight="8dp"
                                            android:textColor="@color/primaryTextColorDarkTheme"
                                            android:text="@string/ringtone" />

                                        <TextView
                                            style="@style/TextStyle.Title.Sub"
                                            android:id="@+id/ringtoneHeaderDetail"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_alignParentLeft="true"
                                            android:layout_centerVertical="true"
                                            android:gravity="center"
                                            android:text="@{viewModel.ringtoneString}"
                                            android:textColor="@color/secondaryTextColorDarkTheme" />

                                    </RelativeLayout>
                                </com.github.florent37.shapeofview.shapes.ArcView>
                            </com.github.florent37.shapeofview.shapes.ArcView>
                        </FrameLayout>
                    </FrameLayout>
                </com.github.florent37.expansionpanel.viewgroup.ExpansionsViewGroupLinearLayout>
            </LinearLayout>
        </LinearLayout>
        <androidx.core.widget.ContentLoadingProgressBar
            android:id="@+id/address_looking_up"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="@{viewModel.isLoading ? View.VISIBLE : View.GONE}" />
    </FrameLayout>
</layout>